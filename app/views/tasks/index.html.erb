<h1>Listing tasks</h1>

<table class=table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Deadline</th>
      <th>Done</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr <%= task.done == false ? 'class=danger' : 'class=success'  %> >
        <td><%= task.name %></td>
        <td><%= task.deadline %></td>
        <td><%= task.done == false ? 'OK' : '--' %></td>
        <td><span class="glyphicon-search"><%= link_to '', task %></span></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

